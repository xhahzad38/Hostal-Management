@model Room

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Delete Room</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>


<h4 class="text-danger">All Information Related to this Room will be Deleted<br />Are you sure you want to delete this Room?</h4><hr />
<div class="row">
    <div class="col-sm-8">
        
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Building.BuildingName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Building.BuildingName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RoomCategory.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoomCategory.CategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RoomNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoomNo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalSeat)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TotalSeat)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back to List", "Index", new { id = @Html.DisplayFor(model => model.BuildingId) }, new { @class = "btn btn-info btn-large" })
                <input type="submit" value="Delete" class="btn btn-danger" /> 
            </div>
        }
    </div>
 </div>