
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script type="text/javascript">
   
    $(function () {

        $('#dayfrom').datepicker({

        });
        $("#dayfrom").datepicker("option", "dateFormat", "yy-mm-dd");
    });
    $(function () {

        $('#dayto').datepicker({

            onSelect: function (date) {
                window.location = "/Admin/Report/" +$('#dayfrom').val()+"/"+date;
            }
        });
        $("#dayto").datepicker("option", "dateFormat", "yy-mm-dd");


    });

</script>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Reports</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-sm-3 col-sm-offset-6">
        <div class="input-group">
            <input type="text" id="dayfrom" class="form-control" placeholder="Date form" />
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                    <span class="glyphicon glyphicon-calendar"></span>
                </button>
            </span>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="input-group">
            <input type="text" id="dayto" class="form-control" placeholder="Date To" />
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                    <span class="glyphicon glyphicon-calendar"></span>
                </button>
            </span>
        </div>
    </div>
    
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <h4>Net Income : @ViewBag.totalincome | Net Cost : @ViewBag.totalcost | Net Profit/Loss :  @ViewBag.totalprofit</h4>
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                   Hostel
                </th>
                <th>
                   Income
                </th>
                <th>
                   Cost
                </th>
                <th>
                   Profit/Loss
                </th>
                

            </tr>

            @foreach (var item in ViewBag.list)
            {
                <tr>
                    <td>
                        @item[0]
                    </td>
                    <td>
                        @item[1]
                    </td>
                    <td>
                        @item[2]
                    </td>
                    <td>
                        @item[3]
                    </td>
                    

                </tr>
            }

        </table>
    </div>
</div>

