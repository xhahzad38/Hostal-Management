@model Bill

@{
    ViewBag.Title = "Bills";
    if ((string)Session["type"] == "Admin")
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if ((string)Session["type"] == "Manager")
    {
        Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    }

}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Create New Building</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal col-sm-6">
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <input type="hidden" name="BuildingId" value="@ViewBag.BuildingId" />
            <div class="form-group">
                @Html.LabelFor(model => model.BillDetails, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BillDetails, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BillDetails, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ammount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ammount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ammount, "", new { @class = "text-danger" })

                    @Html.ValidationMessageFor(model => model.BilledDate, "", new { @class = "text-danger" })

                    @Html.ValidationMessageFor(model => model.SubmitBy, "", new { @class = "text-danger" })

                    @Html.ValidationMessageFor(model => model.BuildingId, "", new { @class = "text-danger" })
                </div>
            </div>

            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
    <div>
        @Html.ActionLink("Back To List", "Index", new { id = ViewBag.BuildingId })
    </div>
