@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Employee Salary</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Building.BuildingName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position.PositionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position.Salary)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Building.BuildingName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position.PositionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position.Salary)
                    </td>
                    <td>
                        @Html.ActionLink("Pay Salary", "Create", new { id = item.EmployeeId }, new { @class = "btn btn-primary btn-large" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
