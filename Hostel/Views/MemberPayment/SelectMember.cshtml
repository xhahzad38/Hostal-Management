@model IEnumerable<Member>

@{
    ViewBag.Title = "Members Payment";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Member List</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Room.RoomNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.RoomNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                    <td>
                        @Html.ActionLink("Create Payment", "Create", new { id = item.MemberId }, new { @class = "btn btn-primary btn-large" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>