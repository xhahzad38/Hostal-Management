@model IEnumerable<Member>

@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    $(function () {
        $('#names').autocomplete({

            source: '/Member/Search',
            select: function (event, ui) { 
               // alert("select" + ui.item.label);
                window.location = "/Member/AdminSearched/" + ui.item.label;
            }
        });

    });
    
</script>  
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Members</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="input-group custom-search-form col-sm-4 col-sm-offset-8">
    <input type="text" id="names" class="form-control" placeholder="Search....." onkeyup="Request(this.value)" />
    <span class="input-group-btn">
        <button class="btn btn-default" type="button">
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </span>
</div>
<br />    


<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Room.RoomNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.RoomNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                    <td>
                        @Html.ActionLink("Details", "AdminDetails", new { id = item.MemberId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>