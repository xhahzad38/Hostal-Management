@model Member

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Delete Member</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>


<h4 class="text-danger">Are you sure you want to delete this Member?</h4><hr />
<div class="row">
    <div class="col-sm-8">
        
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Room.RoomNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Room.RoomNo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MemberName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MemberName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="text-danger">
                Balance
            </dt>

            <dd class="text-danger">
                @ViewBag.balance
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Photo)
            </dt>

            <dd>
                <img src="~/Uploads/Pictures/@Html.DisplayFor(model => model.Photo)" class="img-thumbnail" alt="logo" width="250" height="200" />
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back to List", "Index", new { id = @Html.DisplayFor(model => model.MemberId) }, new { @class = "btn btn-info btn-large" })
                <input type="submit" value="Delete" class="btn btn-danger" /> 
            </div>
        }
    </div>
</div>