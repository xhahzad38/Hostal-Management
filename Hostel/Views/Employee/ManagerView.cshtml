@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Employees</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>


<br />
<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <tr>
                
                <th>
                    @Html.DisplayNameFor(model => model.Position.PositionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppointDate)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Position.PositionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AppointDate)
                    </td>
                    
                </tr>
            }

        </table>
    </div>
</div>