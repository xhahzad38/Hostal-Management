@model IEnumerable<Building>

@{
    ViewBag.Title = "Buildings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Buildings</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-info btn-large" })
</p>
<div class="row">
    <div class="col-sm-10">
        <table class="table table-bordered table-responsive table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BuildingName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BuildingName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BuildingId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.BuildingId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.BuildingId }, new { @class = "text-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
